generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// SQLite does not support native enums, but Prisma Client handles them properly.

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  name      String?
  role      String   @default("USER") // Using String for SQLite compatibility
  wishlist  String   @default("[]") // Storing wishlist product IDs as JSON string
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    Order[]
  reviews   Review[]
  cart      Cart?
}

model Category {
  id          String    @id @default(uuid())
  name        String
  slug        String    @unique
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String
  price       Float    // Original price
  discount    Float?   @default(0) // Discount percentage (0-100)
  stock       Int      @default(0)
  images      String   // Changed to String (comma separated or JSON) because SQLite doesn't support String[]
  isFeatured  Boolean  @default(false)
  isBestSeller Boolean  @default(false) // New: Mark as Best Seller
  
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])

  orderItems  OrderItem[]
  reviews     Review[]
  
  // JSON is supported as String in SQLite
  variants    String?    

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id                      String      @id @default(uuid())
  userId                  String?
  user                    User?       @relation(fields: [userId], references: [id])
  
  total                   Float       // Changed to Float for SQLite
  status                  String      @default("PENDING") // PENDING, CONFIRMED, PROCESSING, ON_THE_WAY, DELIVERED, CANCELLED
  estimatedDeliveryDate   DateTime?   // Estimated delivery date for tracking
  
  // JSON for shipping address
  address                 String
  
  items                   OrderItem[]
  
  createdAt               DateTime    @default(now())
  updatedAt               DateTime    @updatedAt
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId String
  product   Product @relation(fields: [productId], references: [id])
  
  quantity  Int
  price     Float   // Changed to Float
}

model Review {
  id        String   @id @default(uuid())
  rating    Int
  comment   String?
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  
  createdAt DateTime @default(now())
}

model Cart {
  id        String   @id @default(uuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id])
  items     String   // Storing items as JSON string
  updatedAt DateTime @updatedAt
}
